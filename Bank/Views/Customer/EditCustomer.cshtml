@model CustomerViewModel
@{
    ViewData["Customer"] = "Edit";
}
<div class="row justify-content-md-center">
    <div class="card" style="width: 50%;">
        <div class="card-header bg-dark text-light">
            <h3>
                Create New Customer
            </h3>
        </div>
        <div class="card-body bg-light">
            <form asp-action="EditCustomer" asp-route-id="@Model.CustomerId" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CustomerId" />
                <div class="form-group">
                    <label asp-for="Givenname" class="col-form-label"></label>
                    <input asp-for="Givenname" class="form-control shadow-none" />
                    <span asp-validation-for="Givenname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="col-form-label"></label>
                    <input asp-for="Surname" class="form-control shadow-none" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="col-form-label"></label><br />
                    <div class="form-check-inline">
                        <label class="form-check-label">
                            <input type="radio" value="male" asp-for="Gender" class="form-check-input shadow-none" />Male
                        </label>
                    </div>
                    <div class="form-check-inline">
                        <label class="form-check-label">
                            <input type="radio" value="female" asp-for="Gender" class="form-check-input shadow-none" />Female
                        </label>
                    </div>
                    <div class="form-check-inline">
                        <label class="form-check-label">
                            <input type="radio" value="other" asp-for="Gender" class="form-check-input shadow-none" />Other
                        </label>
                    </div>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Streetaddress" class="col-form-label"></label>
                    <input asp-for="Streetaddress" class="form-control shadow-none" />
                    <span asp-validation-for="Streetaddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Zipcode" class="col-form-label"></label>
                    <input asp-for="Zipcode" class="form-control shadow-none" />
                    <span asp-validation-for="Zipcode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="col-form-label"></label>
                    <input asp-for="City" class="form-control shadow-none" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Country" class="col-form-label"></label>
                    <input asp-for="Country" class="form-control shadow-none" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CountryCode" class="col-form-label"></label>
                    <input asp-for="CountryCode" class="form-control shadow-none" />
                    <span asp-validation-for="CountryCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Birthday" class="col-form-label"></label>
                    <input asp-for="Birthday" class="form-control shadow-none" />
                    <span asp-validation-for="Birthday" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NationalId" class="col-form-label"></label>
                    <input asp-for="NationalId" class="form-control shadow-none" />
                    <span asp-validation-for="NationalId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telephonecountrycode" class="col-form-label"></label>
                    <input asp-for="Telephonecountrycode" class="form-control shadow-none" />
                    <span asp-validation-for="Telephonecountrycode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telephonenumber" class="col-form-label"></label>
                    <input asp-for="Telephonenumber" class="form-control shadow-none" />
                    <span asp-validation-for="Telephonenumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Emailaddress" class="col-form-label"></label>
                    <input asp-for="Emailaddress" class="form-control shadow-none" />
                    <span asp-validation-for="Emailaddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-dark" />
                </div>
            </form>
            <div>
                <a asp-action="Customers" asp-controller="Customer" class="text-dark">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
